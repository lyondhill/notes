#!/usr/bin/env ruby

require 'notes'
include Notes

case ARGV.first
when "-c", "create"
  create(ARGV.last)
when "-d", "delete"
  delete(ARGV.last)
when "-l", "list"
  list
when "-e", "execute"
  execute(ARGV.last)
when "-h", "help"
  help
else
  if ARGV.count == 1
    show ARGV.first
  else
  help
  end
end